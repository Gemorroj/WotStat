<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context=".MainActivity$PlaceholderFragment">

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"
    android:hint="Логин"
    android:id="@+id/editText"
    android:focusable="true"
    android:layout_alignBottom="@+id/button"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="OK"
    android:onClick="buttonSearchClick"
    android:id="@+id/button"
    android:layout_toRightOf="@+id/editText"
    android:focusable="true"
    android:clickable="true"
    android:layout_alignParentTop="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="WN8:"
        android:id="@+id/textViewWN8"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\?"
        android:id="@+id/resultTextViewWN8"
        android:layout_above="@+id/textViewWN6"
        android:layout_alignLeft="@+id/resultTextViewWN6"
        android:layout_alignStart="@+id/resultTextViewWN6"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="WN6:"
        android:id="@+id/textViewWN6"
        android:layout_below="@+id/textViewWN8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="\?"
        android:id="@+id/resultTextViewWN6"
        android:layout_alignTop="@+id/textViewWN6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp"
        android:layout_gravity="right" />

</RelativeLayout>